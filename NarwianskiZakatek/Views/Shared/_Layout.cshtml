<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NarwianskiZakatek</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NarwianskiZakatek.styles.css" asp-append-version="true" />
    <link href="~/css/weather.css" rel="stylesheet" />
    <link href="~/css/calendar.css" rel="stylesheet" />
    
</head>

<body class="bg-black with-bottom-space">
    <header>
        <div class="container-fluid no-pad">
            <img class="fit" src="~/graphics/header.jpg" runat="server" />
            <div class="top-right">
                <a class="pagetitle fs-1" asp-action="Index">Narwiański Zakątek</a>
            </div>
        </div>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Accomodation">Noclegi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Catering">Restauracja</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Attractions">Atrakcje</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Neighborhood">Okolica</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Reservations" asp-action="MyReservations" title="Manage">Rezerwacje</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="About">O nas</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-white">
        <div class="row">
            <div class="col-lg-8">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="col-lg-4">
                <div>
                    <partial name="_Calendar" />
                </div>
                <div>
                    <partial name="_Weather" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("css", required: false)
</body>
<footer class="border-top footer text-muted footer-custom">
    <div class="container black">
        &copy; @DateTime.Now.Year - Narwiański Zakątek
    </div>
</footer>
</html>
