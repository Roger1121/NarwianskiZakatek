@model IEnumerable<NarwianskiZakatek.Models.Post>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Utworzone wpisy</h1>
<partial name="_StatusMessage" />
<p>
    <a asp-action="Create">Dodaj posta</a>
</p>
<hr />
@foreach (var item in Model)
{
    <h3>
        @item.Title
    </h3>
    <h5>
        @item.getDateWithFormat()
    </h5>
    <table>
        <tr>
            <td>
                <img style="margin: 10px; object-fit: contain;" src="@item.getFullPhotoPath()" width="120" height="110" />
            </td>
            <td>
                <p style="text-align: justify;">
                    @item.getContentPreview()
                </p>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Usuń</a>
            </td>
        </tr>
    </table>
}
