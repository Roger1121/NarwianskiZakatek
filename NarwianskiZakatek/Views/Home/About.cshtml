@model NarwianskiZakatek.Models.Description

@{
    ViewData["Title"] = "O nas";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>
<br />
<img src="@Model.getFullPhotoPath()" width="100%" />
<br />
<p>
    @Html.DisplayFor(model => model.Content)
</p>
<br />
<div class="gmap_canvas">
    <iframe id="gmap" src="https://maps.google.com/maps?q=Konowa%C5%82y%2040&t=&z=13&ie=UTF8&iwloc=&output=embed"
            frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    <style>
        .gmap_canvas {
            position: relative;
            margin: 0 auto;
            overflow: hidden;
            width: 80%;
            padding-top: 56.25%;
        }
    </style>
    <style>
        #gmap {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</div>