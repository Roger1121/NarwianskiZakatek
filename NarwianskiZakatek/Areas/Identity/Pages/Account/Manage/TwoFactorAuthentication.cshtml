@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Uwierzytelnianie dwuskładnikowe";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>Nie masz już więcej kodów odzyskiwania.</strong>
                    <p>Musisz <a asp-page="./GenerateRecoveryCodes">wygenerować nowy zestaw kodów odzyskiwania</a> aby móc zalogować się z pomocą kodu w przyszłości.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>Pozostał ci ostatni kod odzyskiwania konta.</strong>
                    <p>Zalecamy <a asp-page="./GenerateRecoveryCodes">wygenerować nowy zestaw kodów odzyskiwania</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Pozostały ci @Model.RecoveryCodesLeft kody odzyskiwania.</strong>
                    <p>Możesz <a asp-page="./GenerateRecoveryCodes">wygenerować nowy zestaw kodów odzyskiwania</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" class="inline-display">
                    <button type="submit" class="btn btn-primary with-margin">Zapomnij tę przeglądarkę</button>
                </form>
                <br />
            }
            <a asp-page="./Disable2fa" class="btn btn-primary with-margin">Wyłącz uwierzytelnianie dwuskładnikowe</a>
            <br />
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary with-margin">Resetuj kody odzyskiwania</a>
            <hr />
        }

        <h4>Aplikacja uwierzytelniająca</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary with-margin">Dodaj nową aplikację uwierzytelniającą</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary with-margin">Ustaw aplikację uwierzytelniającą</a>
            <br />
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary with-margin">Resetuj aplikację uwierzytelniającą</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Polityka prywatności i ustawienia ciasteczek nie zostały zaakceptowane.</strong>
            <p>Musisz zaakceptować politykę prywatności i ustawienia ciasteczek, zanim włączysz uwierzytelnianie dwuskładnikowe.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
