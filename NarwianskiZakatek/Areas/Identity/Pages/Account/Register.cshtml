@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}
<br/>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <section>
            <h3>Zaloguj się przy użyciu jednego z poniższych serwisów</h3>
            <hr />
            @{
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                            {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Zaloguj się, używając konta @provider.DisplayName" style="margin: 5px">@provider.DisplayName</button>
                                    <br />
                            }
                            </p>
                        </div>
                    </form>
            }
        </section>
    </div>
    <div class="col-md-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Utwórz konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.Name" class="form-control" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.Surname" class="form-control" aria-required="true" />
                <label asp-for="Input.Surname"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.Street" class="form-control" aria-required="true" />
                <label asp-for="Input.Street"></label>
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.BuildingNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.BuildingNumber"></label>
                <span asp-validation-for="Input.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.LocalNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.LocalNumber"></label>
                <span asp-validation-for="Input.LocalNumber" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.City" class="form-control" aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.PostalCode" class="form-control" aria-required="true" />
                <label asp-for="Input.PostalCode"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 5px">
                <input asp-for="Input.PostCity" class="form-control" aria-required="true" />
                <label asp-for="Input.PostCity"></label>
                <span asp-validation-for="Input.PostCity" class="text-danger"></span>
            </div>
            <div id="captcha_div" class="g-recaptcha" style="margin: 5px" data-callback="enableBtn"></div>
            <br/>
            <button id="submitButton" style="margin: 5px" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj</button>
            <p>Jeżeli posiadasz już konto, przejdź <a href = "~/identity/account/login">tutaj</a>, aby się zalogować</p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            submitButton.disabled = true;
        });

        var onloadCallback = function () {
            grecaptcha.render('captcha_div', {
                'sitekey': '@Model._captchaConfig.PublicKey'
            });
        };

        function enableBtn() {
            submitButton.disabled = false;
        }
    </script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
        async defer>
    </script>
}
